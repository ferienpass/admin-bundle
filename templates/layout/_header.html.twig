<div class="bg-white dark:bg-gray-950 shadow" x-data="{ mobileMenuOpen: false }">
    <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:divide-y lg:divide-gray-200 lg:dark:divide-gray-800 lg:px-8">
        <div class="relative h-16 flex justify-between">
            <div class="relative z-10 px-2 flex lg:px-0">
                <div class="flex-shrink-0">
                    {% block logo %}
                        <div class="h-full flex items-center">
                            <h1 class="text-sm text-gray-500 font-normal leading-4">Ferienpass
                                <br>Admin-Portal</h1>
                        </div>
                    {% endblock %}
                </div>
            </div>

            {% set menu = knp_menu_get('admin_primary') %}
            {% if menu.hasChildren %}
                <div class="relative z-10 flex items-center lg:hidden">
                    <button type="button"
                            @click="mobileMenuOpen = !mobileMenuOpen"
                            class="rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gray-900"
                            aria-controls="mobile-menu"
                            :aria-expanded="mobileMenuOpen ? 'true' : 'false'">
                        <span class="sr-only">Menü öffnen</span>
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                        <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            {% endif %}
            <div class="hidden lg:relative lg:z-10 lg:ml-4 lg:flex lg:items-center lg:space-x-4">

                <div class="flex items-center">
                        {#
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_tools_warnings') }}"
                           data-turbo-frame="modal"
                           title="Warnungen anzeigen"
                           class="group py-2 px-2 inline-flex items-center">

                            {% if systemStatus.hasWarnings %}
                                <span class="sr-only">Warnungen anzeigen</span>
                                <span aria-hidden="true"
                                      class="h-6 w-6 text-orange-600 group-hover:text-orange-700">{{ source('@FerienpassAdmin/icons/exclamation-triangle.solid.svg') }}</span>
                            {% else %}
                                <span class="sr-only">Keine Warnungen</span>
                                <span aria-hidden="true"
                                      class="h-6 w-6 text-green-600 group-hover:text-green-700">{{ source('@FerienpassAdmin/icons/check-circle.outline.svg') }}</span>
                            {% endif %}

                        </a>
                        <a href="{{ path('admin_tools_issue') }}"
                           data-turbo-frame="modal"
                           title="Problem melden"
                           class="py-2 px-2 inline-flex items-center text-gray-500 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-50">
                            <span class="sr-only">Ticket erstellen</span>
                            <span aria-hidden="true"
                                  class="h-6 w-6">{{ source('@FerienpassAdmin/icons/hand-thumb-down.outline.svg') }}</span>
                        </a>
                        #}
                        <a href="{{ path('admin_tools_registration') }}"
                           data-turbo-frame="modal"
                           title="Schnell-Erfassung"
                           class="py-2 px-2 inline-flex items-center text-gray-500 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-50">
                            <span class="sr-only">Schnell-Erfassung</span>
                            <span aria-hidden="true"
                                  class="h-6 w-6">{{ source('@FerienpassAdmin/icons/user-plus.outline.svg') }}</span>
                        </a>

                        <a href="{{ path('admin_frontend_preview') }}"
                           target="_blank"
                           class="rounded-md py-2 px-3 inline-flex items-center text-sm font-medium text-gray-900 dark:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-900/80 hover:text-gray-900 dark:hover:text-gray-50">
                            Frontend
                        </a>
                        <a href="{{ path('admin_cms') }}"
                           class="rounded-md py-2 px-3 inline-flex items-center text-sm font-medium text-gray-900 dark:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-900/80 hover:text-gray-900 dark:hover:text-gray-50">
                            CMS
                        </a>
                    {% endif %}
                </div>

                {% include '@FerienpassAdmin/layout/_profile_dropdown.html.twig' %}
            </div>
        </div>

        {% include '@FerienpassAdmin/layout/_navbar.html.twig' %}

    </div>

    {% include '@FerienpassAdmin/layout/_mobile_menu.html.twig' %}
</div>
