{% extends "@FerienpassAdmin/layout/modalBase.html.twig" %}

{% block main %}

    {% embed '@FerienpassAdmin/fragment/deleteModal.html.twig' with {
        metadata: {
            accountRoles: '{{ item.accountRoles|map(r => "accounts.role.#{r}"|trans([], "admin"))|join(", ") }}',
            name: '{{ item.name }}',
            email: '{{ item.email }}',
            participants: '{{ item.participants|map(u => "#{u.name}")|join(", ") }}',
            hosts: '{{ item.hosts|map(u => "#{u.name}")|join(", ") }}'
        }
    } %}

        {% block content %}
            {% if item.participants|length %}
                <div class="mt-2 flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-700 dark:text-yellow-500" viewBox="0 0 20 20"
                             fill="currentColor"
                             aria-hidden="true">
                            <path fill-rule="evenodd"
                                  d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-2">
                        <p class="text-sm text-yellow-700 dark:text-yellow-500">
                            <span class="font-semibold">Kinder und Anmeldungen werden mitgel√∂scht!</span> Wenn Sie das
                            nicht
                            wollen, bearbeiten Sie die Kinder und entfernen die Eltern-Zuordnung.
                        </p>
                    </div>
                </div>
            {% endif %}

            {% if item.hosts|length %}
                <div class="mt-2 flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-600 dark:text-blue-500" viewBox="0 0 20 20" fill="currentColor"
                             aria-hidden="true">
                            <path fill-rule="evenodd"
                                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-2">
                        <p class="text-sm text-blue-700 dark:text-blue-400">
                            Die Veranstalter-Profile bleiben erhalten.
                        </p>
                    </div>
                </div>
            {% endif %}

        {% endblock %}

    {% endembed %}

{% endblock %}
