{% extends "@FerienpassAdmin/layout/modalBase.html.twig" %}

{% block main %}

    {% embed '@FerienpassAdmin/fragment/deleteModal.html.twig' with {
        metadata: {
            title: '{{ item.name }}',
            holiday: "{{ item.holiday ? item.holiday.periodBegin|date('d.m.Y') ~ ' - ' ~  item.holiday.periodEnd|date('d.m.Y') : '' }}",
            countOffers: '{{ item.offers|length }}',
            archived: '{{ item.archived ? "ja" : "nein" }}',
        }
    } %}

        {% block content %}
            {% if item.offers|length %}
                <div class="mt-2 flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-700 dark:text-yellow-500" viewBox="0 0 20 20"
                             fill="currentColor"
                             aria-hidden="true">
                            <path fill-rule="evenodd"
                                  d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-2">
                        <p class="text-sm text-yellow-700 dark:text-yellow-500">
                            <span class="font-semibold">Es werden alle {{ item.offers|length }} Angebote mit jeweiligen
                                Anmeldungen mitgel√∂scht!</span> Wenn Sie das nicht wollen, verschieben Sie die Angebote
                            vorher in eine andere Saison.
                        </p>
                    </div>
                </div>
            {% endif %}

        {% endblock %}

    {% endembed %}

{% endblock %}
